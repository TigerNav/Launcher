package GUI;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.SwingUtilities;
import GUI.framework.CustomButton;
import GUI.framework.CustomLabel;
import GUI.framework.CustomTextField;
import Networking.MySqlConnection;

import java.awt.*;
import java.util.ArrayList;

public class Gui {

	JFrame window;
	public static Font font = new Font(Font.SANS_SERIF, Font.BOLD, 15);
	CustomTextField gmail;
	CustomTextField password;
	CustomButton button;
	CustomLabel label;
	CustomLabel gmailLabel;
	CustomLabel PasswordLabel;
	CustomButton SwitchSignIn;
	CustomButton SwitchLogin;
	
	public Gui() {
		window = new JFrame("Nav Launcher");
		window.setSize(500, 600);
		window.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		window.setVisible(true);	
		window.getContentPane().setBackground(new Color(90, 90, 90));
		window.setLayout(null);
		
		new MySqlConnection();   
		
		
		
		gmail = new CustomTextField();
		gmail.setSize(200, 30);
		gmail.setLocation(150, 150);
		
		password = new CustomTextField();
		password.setSize(200, 30);
		password.setLocation(150, 200);
		
		button = new CustomButton("Submit");
		button.setSize(150, 40);
		button.setLocation(170, 250);
		
		label = new CustomLabel("Log In");
		label.setSize(90, 40);
		label.setLocation(220, 70);
		
		gmailLabel = new CustomLabel("Gmail");
		gmailLabel.setSize(100, 40);
		gmailLabel.setLocation(225, 120);
		
		PasswordLabel = new CustomLabel("Password");
		PasswordLabel.setSize(100, 40);
		PasswordLabel.setLocation(210, 170);
		
		SwitchLogin = new CustomButton("Sign In");
		SwitchLogin.setFont(font.deriveFont(12));
		SwitchLogin.setSize(90, 20);
		SwitchLogin.setLocation(50, 20);
		
		SwitchSignIn = new CustomButton("Log In");
		SwitchSignIn.setFont(font.deriveFont(12));
		SwitchSignIn.setSize(90, 20);
		SwitchSignIn.setLocation(400, 20);
		
		window.add(gmail);
		window.add(password);
		window.add(button);
		window.add(label);
		window.add(gmailLabel);
		window.add(PasswordLabel);
		window.add(SwitchLogin);
		window.add(SwitchSignIn);
		
		SwingUtilities.updateComponentTreeUI(window);

	}
}
