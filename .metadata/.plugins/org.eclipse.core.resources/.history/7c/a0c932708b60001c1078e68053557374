package GUI.framework;

import java.awt.*;

import javax.swing.JComponent;

public class drawline extends JComponent{

	/**
	 * 
	 */
	private static final long serialVersionUID = 8163122417218723686L;
	int x, y, w, h;
	Color color;
	
	public drawline(int x, int y, int w, int h) {
		this.x = x;
		this.y = y;
		this.w = w;
		this.h = h;
		color = new Color(255,255,255);
	}
	
	public void setColor(Color color) {
		this.color = color;
	}
	
	@Override
	protected void paintComponent(Graphics g) {
		
		g.drawLine(x, y, w, h);
		g.setColor(new Color(255,255,255));
		
		super.paintComponent(g);
	}

}
