package GUI.framework;

import java.awt.*;

import javax.swing.BorderFactory;
import javax.swing.JTextField;

import GUI.Gui;


public class CustomTextField extends JTextField{

	public CustomTextField() {
		
		setFont(Gui.font);
		setForeground(Color.WHITE);
		setBorderColor(new Color(0, 0, 0));
		setFill(new Color(99, 99, 99));
		setSelectedColor(new Color(70, 70, 70));
		setBorder(BorderFactory.createLineBorder(BorderColor), 3);
	}
	
	private Color fill;
	private Color SelectedColor;
	private Color BorderColor;
	

	public Color getBorderColor() {
		return BorderColor;
	}
	public void setBorderColor(Color borderColor) {
		BorderColor = borderColor;
	}
	public Color getFill() {
		return fill;
	}
	public void setFill(Color fill) {
		this.fill = fill;
		setBackground(fill);
	}
	public Color getSelectedColor() {
		return SelectedColor;
	}
	public void setSelectedColor(Color selectedColor) {
		SelectedColor = selectedColor;
	}

	

	@Override
	protected void paintComponent(Graphics g) {
		 Graphics2D g2d = (Graphics2D) g;
		 g2d.setRenderingHint(RenderingHints.KEY_ANTIALIASING, RenderingHints.VALUE_ANTIALIAS_ON);
		 
		 g2d.setColor(fill);
		 g2d.fillRoundRect(0, 0, getWidth(), getHeight(), 0, 0);
		 g2d.setColor(getBackground());
		 setBorderColor(BorderColor);
		 super.paintComponent(g);
	}
	
}
